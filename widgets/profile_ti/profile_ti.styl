desktop = 1170px
tablet = 900px
mobile = 440px
animationTime = 0.5s


.ti-lock-scroll
    overflow hidden
    body
        -webkit-overflow-scrolling touch
        overflow hidden
        position relative
        height 100%

.spm_profile_ti 

    input 
        &::-webkit-input-placeholder { /* Chrome/Opera/Safari */
            color: rgba(128, 128, 128, 0.3);
        }
        &::-moz-placeholder { /* Firefox 19+ */
            color: rgba(128, 128, 128, 0.3);
        }
        &:-ms-input-placeholder { /* IE 10+ */
            color: rgba(128, 128, 128, 0.3);
        }
        &:-moz-placeholder { /* Firefox 18- */
            color: rgba(128, 128, 128, 0.3);
        }

    .ti_wrapper
        color black
        font-family 'Circe'
        overflow hidden

    .ti_container
        width 100%
        max-width desktop
        margin auto
        position relative
        box-sizing border-box
        @media screen and (max-width: desktop)
            padding 0 80px
        @media screen and (max-width: tablet)
            padding 0 50px
        @media screen and (max-width: mobile)
            padding 0 10%

    .ti_button
        border solid 3px black 
        text-align center
        background white
        box-sizing border-box
        text-transform uppercase
        font-size 16px
        color black
        font-weight 900
        padding 0
        text-decoration none
        display block
        width 100%
        -webkit-appearance none
        transition animationTime ease
        &.type_big
            height 80px
            line-height 76px
        &.type_small
            height 48px
            line-height 44px
        &:hover
            color white
            background black
        &:disabled 
            opacity 0.3
            &:hover 
                cursor default
                color black
                background white


    .ti_popup
        display flex
        justify-content center
        // align-items center
        align-items flex-start
        position fixed
        top 0
        left 0
        width 100%
        height 100%
        z-index 10
        overflow auto
        .ti_popup_layout
            position fixed
            width 100%
            height 100%
            top 0
            left 0
            z-index 1
            opacity 0.8
            background-color black
        .ti_popup_content
            position relative
            background white
            z-index 2
            box-sizing border-box
            margin 75px 0
            @media screen and (max-width: mobile)
                width 90%
        .ti_popup_close
            width 18px
            height 18px
            border none
            outline none
            cursor pointer
            display block
            position absolute
            top 0
            right -30px
            @media screen and (max-width: tablet)
                top -30px
                right 0
    .ti_profile
        margin-bottom 120px
        @media screen and (max-width: mobile)
            margin-bottom 30px
        .ti_container
            min-height 470px
            display flex
            align-content center
            justify-content space-between
            align-items stretch
            @media screen and (max-width: desktop)
                flex-wrap wrap
                min-height 0
        .ti_profile_text
            background white
            box-sizing border-box
            width 65%
            padding 100px
            position relative
            .ti_profile_text_header
                margin 0
                padding 0
                text-transform uppercase
                font-size 40px
                line-height 40px
                font-weight bold
                text-align left
                @media screen and (max-width: mobile)
                    font-size 28px
                    line-height 32px
            .ti_profile_text_desc
                margin-top 30px
                font-size 18px
                line-height 22px
                @media screen and (max-width: mobile)
                    margin-top 15px
                    font-size 16px
                a
                    color #56bff9
                    &:hover
                        text-decoration none
            @media screen and (max-width: desktop)
                width 100%
            @media screen and (max-width: tablet)
                padding 15%
            @media screen and (max-width: mobile)
                padding 10%
        .ti_profile_info
            background linear-gradient(to top, #f9f5a3, #fed0bc)
            box-sizing border-box
            width 35%
            padding 60px
            position relative
            .ti_profile_logout
                cursor pointer
                width 25px
                height 25px
                top 25px
                right 25px
                position absolute
                display block
                border none 
                outline none
                opacity 0.3
                transition animationTime ease
                &:hover
                    opacity 1
            .ti_type_no_auth
                display flex
                align-items center
                width 100%
                height 100%
                flex-direction column
                flex-wrap wrap
                padding-top 30px
                @media screen and (max-width: tablet)
                    padding-top 0
                .ti_button
                    margin-top 55px
                    height 50px
                    line-height 46px
                    max-width 200px
            .ti_type_auth
                display flex
                align-items center
                width 100%
                flex-direction column
                flex-wrap wrap
                justify-content center
                img 
                    width 100px
                    height auto
                    display block
                    border-radius 50%
                    cursor pointer
                    overflow hidden
                .ti_purchase_balance
                    margin-top 30px
                    text-align center
                    @media screen and (max-width: mobile)
                        margin-top 20px
                    div
                        font-weight bold
                        font-size 60px
                        line-height 80px
                        @media screen and (max-width: mobile)
                            font-size 42px
                            line-height 50px
                    span
                        font-size 18px
                        line-height 22px
                .ti_level_offset
                    margin-top 30px
                    text-align center
                    transition animationTime ease
                    opacity 1
                    transform translateY(0)
                    visibility visible
                    @media screen and (max-width: mobile)
                        margin-top 20px
                    div
                        font-weight bold
                        font-size 35px
                        line-height 50px
                    span
                        font-size 18px
                        line-height 22px
                .ti_button
                    position absolute
                    width calc(100% - 120px)
                    max-width 250px
                    bottom 100px
                    left 0 
                    right 0
                    margin auto
                    transition animationTime ease
                    opacity 0
                    transform translateY(100%)
                    visibility visible
                    @media screen and (max-width: tablet)
                        bottom auto
                        width 120px
                        position relative
                        left auto
                        right auto
                        transform none
                        visibility visible
                        opacity 1
                        bottom auto
                        margin-top 30px
            &:hover
                .ti_level_offset
                    opacity 0
                    transform translateY(-50%)
                    visibility visible
                    @media screen and (max-width: mobile)
                        opacity 1
                        transform translateY(0%)
                        visibility visible
                .ti_button
                    opacity 1
                    transform translateY(0%)
                    visibility visible
            @media screen and (max-width: desktop)
                width 100%
            @media screen and (max-width: tablet)
                padding 15%
            @media screen and (max-width: mobile)
                padding 10%

    .ti_profile_history
        .ti_profile_history_content
            display flex
            align-content center
            justify-content stretch
            @media screen and (max-width: tablet)
                flex-wrap wrap
        .ti_profile_history_info
            background white
            padding 40px 45px
            @media screen and (max-width: tablet)
                width 100%
            @media screen and (max-width: mobile)
                padding 10%
            .ti_button
                @media screen and (max-width: tablet)
                    display inline-block
                    width auto
                    padding 0 15px
        .ti_profile_history_info_field
            display flex
            align-items left
            justify-content space-evenly
            margin-bottom 20px
            flex-direction column
            @media screen and (max-width: tablet)
                display none
            &.type_pic
                flex-direction row
                align-items center
                @media screen and (max-width: tablet)
                    display flex
                img
                    width 65px
                    height auto
                    border-radius 50%
                    overflow hidden
                    display block
                span
                    margin-left 15px
                    color black
                    @media screen and (max-width: tablet)
                        margin-right auto
            span
                display block
                font-size 16px
                color #dfdfdf
            div
                font-size 16px
        .ti_profile_purchase_details
            background #f6f6f6
            padding 40px 45px 75px
            width 460px
            position relative
            box-sizing border-box
            @media screen and (max-width: tablet)
                width 100%
            @media screen and (max-width: mobile)
                padding 10% 10% 20%
            .ti_profile_purchase_title
                font-size 22px
                font-weight bold
                margin-bottom 30px
                img
                    display inline-block
                    width auto
                    height 16px
                    cursor pointer
                    margin-right 10px
            .ti_profile_purchase_item
                display flex
                align-items center
                justify-content space-between
                padding 10px 0
                color #c0c0c0
                box-sizing border-box
                .ti_profile_purchase_item_name
                    font-size 16px
                    line-height 1.75
                    width 60%
                .ti_profile_purchase_item_price
                    color #e0b77e
                    width 75%
                    text-align right
                &.type_total
                    border-top solid 1px rgba(151, 151, 151, 0.2)
                    .ti_profile_purchase_item_name
                        color black
                    .ti_profile_purchase_item_price
                        color #e0b77e
                

        .ti_profile_history_list
            background #f6f6f6
            padding 40px 45px 75px
            width 460px
            position relative
            box-sizing border-box
            @media screen and (max-width: tablet)
                width 100%
            @media screen and (max-width: mobile)
                padding 10% 10% 20%
            .ti_profile_history_title
                font-size 22px
                font-weight bold
                margin-bottom 30px
            .ti_profile_history_item
                display flex
                align-items flex-start
                justify-content space-between
                padding 10px 0
                border-bottom solid 1px rgba(151, 151, 151, 0.2)
                box-sizing border-box
                &:last-child
                    border-bottom none
                .ti_profile_history_item_date
                    font-size 16px
                    line-height 1.75
                    color #c0c0c0
                    width 25%
                .ti_profile_history_item_info
                    width 75%
                    display flex
                    align-items flex-start
                    justify-content space-between
                    flex-direction column
                    .ti_profile_history_item_info_position
                        display flex
                        width 100%
                        flex-direction row
                        align-items stretch
                        justify-content space-between
                        height 28px 
                        line-height 28px
                        font-size 16px
                    .ti_profile_history_item_info_position_name
                        cursor pointer
                        color #000000
                        &:hover
                            text-decoration underline
                    .ti_profile_history_item_info_position_count
                        color #e0b77e
            .ti_profile_history_pagination
                position absolute
                bottom 40px
                left 45px
                @media screen and (max-width: mobile)
                    left 10%
                    bottom 10%
                .ti_profile_history_pagination_item
                    height 28px
                    font-size 16px
                    line-height 28px
                    text-align left
                    margin-right 10px
                    color #c0c0c0
                    text-decoration none
                    transition animationTime ease
                    &.type_action
                        font-weight bold
                        color #2e3247
                    &:hover
                        color #2e3247

    .ti_profile_form
        .ti_popup_content
            width auto
            display flex
            max-width 800px
            align-items stretch
            flex-wrap wrap
            &.type_column
                flex-direction column
            @media screen and (max-width: tablet)
                flex-direction column
                width 90%
                max-width 600px
        .ti_profile_form_message
            background black
            line-height 60px
            height 60px
            color white
            text-align center
            font-size 16px
            width 100%
            &.type_success
                background #e0b77e
            &.type_error
                background #D35050
        .ti_profile_form_confirmation 
                max-width 200px
                padding 50px 40px 50px 0
                position relative
                box-sizing border-box
                &:after
                    content ''
                    background #979797
                    width 1px
                    height 100%
                    opacity 0.2
                    position absolute
                    left -35px
                    top 0
                    display block
                    @media screen and (max-width: tablet)
                        display none
                .ti_profile_form_confirmation_title
                    display block
                    font-size 16px
                    text-align left
                    color black
                    margin-bottom 4px
                .ti_profile_form_confirmation_text
                    display block
                    font-size 14px
                    text-align left
                    color black
                    margin-top 25px
                    line-height 1.3
                .ti_profile_form_confirmation_input
                    padding 0 10px
                    width 100%
                    height 42px
                    font-size 14px
                    line-height 40px
                    -webkit-appearance none
                    box-sizing border-box
                    outline none
                    border solid 1px rgba(0, 0, 0, 0.13)
                    &:focus
                        border solid 1px rgba(0, 0, 0, 0.5)
                .ti_profile_form_confirmation_error
                    display block
                    font-size 14px
                    line-height 1.3
                    text-align left
                    color #d0021b
                .ti_profile_form_confirmation_link
                    display inline-block
                    font-size 14px
                    text-decoration underline
                    text-align left
                    color #e0b77e
                    margin-top 15px
                @media screen and (max-width: tablet)
                    width 100%
                    padding 50px 70px
                    max-width 100%
                    order 3
                @media screen and (max-width: mobile)
                    padding 10%
        .ti_profile_form_content
            padding 50px 70px
            box-sizing border-box
            display flex
            align-content center
            justify-content space-between
            flex-wrap wrap
            display flex
            max-width 630px
            &.type_small 
                max-width 600px
            @media screen and (max-width: mobile)
                padding 10%
            .ti_profile_form_part
                width 48%
                @media screen and (max-width: tablet)
                    width 100%
            .ti_profile_form_submit
                margin-top 45px
                outline none 
                border-radius 0
                -webkit-appearance none
            .ti_profile_form_el
                width 100%
                margin-top 20px
                display block
                &:first-child
                    margin-top 0
                & > div 
                    width 100%
                    display flex
                    align-content center
                    justify-content space-between
                    flex-wrap wrap
                    overflow hidden
                span
                    display block
                    font-size 16px
                    text-align left
                    color black
                    margin-bottom 4px
                input
                    padding 0 10px
                    width 100%
                    height 42px
                    font-size 14px
                    line-height 40px
                    -webkit-appearance none
                    box-sizing border-box
                    outline none
                    border solid 1px rgba(0, 0, 0, 0.13)
                    &:focus
                        border solid 1px rgba(0, 0, 0, 0.5)
                &.type_date
                    display flex
                    align-content center
                    justify-content space-between
                    flex-wrap wrap
                    span
                        width 100%
                    input
                        &:nth-of-type(1)
                            width 30%
                        &:nth-of-type(2)
                            width 30%
                        &:nth-of-type(3)
                            width 30%
                &.type_gender
                    display flex
                    align-content center
                    justify-content space-between
                    flex-wrap wrap
                    overflow hidden
                    span
                        width 100%
                    label
                        width 50%
                        height 42px
                        font-size 14px
                        line-height 40px
                        box-sizing border-box
                        position relative
                        cursor pointer
                        &:nth-of-type(1) span
                            border-right none
                        &:nth-of-type(2) span
                            border-left none
                        span
                            text-align center
                            border solid 1px rgba(0, 0, 0, 0.13)
                            margin 0
                            color inherit
                            box-sizing border-box
                            transition animationTime ease
                            position relative
                            z-index 2
                            &:hover
                                border-color #e0b77e
                        input
                            position absolute
                            left 0
                            bottom 0
                            width 100%
                            height 100%
                            opacity 0
                            z-index 1
                            &:checked + span
                                background #e0b77e
                                border-color #e0b77e
                                color white